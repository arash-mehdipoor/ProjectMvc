@model IEnumerable<Project.Domin.Models.User>

@{
    ViewBag.Title = "لیست کاربران";
}

    <div class="Title-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <span class="title">مدیریت کاربران</span>
                </div>
            </div>
        </div>
    </div>
<p>
    @Html.ActionLink("ایجاد کاربر جدید", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Roles.RoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhonNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActiveCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Roles.RoleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhonNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActiveCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegisterDate)
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.UserID }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.UserID })
        </td>
    </tr>
}

</table>
